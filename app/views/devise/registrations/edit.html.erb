<% provide(:title, '| Edit User') %>
<div class="well">
  <div class='form-center'>
    <h1 class= "lead title">Edit User</h1>
    <hr>
    
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),
                           :html => { :method => :put }) do |f| %>

      <%= render 'form', f: f %>

      <div><%= f.label :current_password %> <i>(to confirm your changes)</i>
      <%= f.password_field :current_password, class: "form-control form-center"%></div>

      <div>
        <%= f.submit "Update", class: 'btn btn-success' %>
        <%= link_to "Cancel", user_path(resource), class: 'btn btn-warning' %>
      </div>
   <% end %>

    <div>
      <h3>Cancel my account</h3>
      <%= button_to "Cancel my account", registration_path(resource_name),
                    :data => { :confirm => "Are you sure?" }, :method => :delete,
                    :class => 'btn btn-danger' %>
    </div>
  </div>
</div>
