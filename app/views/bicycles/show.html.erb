<h1 class="lead title"> Stolen Bike Listing: </h1>
<%= @bicycle.user.email %>
<%= image_tag @bicycle.photo.url :medium %>
<%= @bicycle.date %>
<%= @bicycle.city %>
<%= @bicycle.region %>
<%= @bicycle.country %>
<%= @bicycle.description %>
<%= @bicycle.postal_code %>
<%= @bicycle.serial %>
<%= @bicycle.verified_ownership %>
<%= @bicycle.year %>
<%= @bicycle.brand %>
<%= @bicycle.model %>
<%= @bicycle.color %>
<%= @bicycle.size %><%= @bicycle.size_type %>
<% if user_signed_in? && current_user == @bicycle.user %>
  <div class='row'>
    <p id='edit-delete'>
      <%= link_to 'Edit', edit_bicycle_path(@bicycle) %> |
      <%= link_to 'Delete', bicycle_path(@bicycle), method: 'delete', data: { confirm: "Are you sure you want to delete this listing?" } %>
    </p>
  </div>
<% end %>

<div class="row">
  <div class='col-md-4'>
    <table class="table table-bordered">
      <tr>
        <td><%= image_tag @bicycle.photo.url :medium %>
      </tr>
      <tr>
        <td class='btn-info'>Description</td>
      </tr>
      <tr>
        <td><%= @bicycle.description %>
      </tr>
    </table>
  </div>

  <div class='col-md-8'>
    <table class="table table-bordered">
      <tr>
        <td colspan='2' class='btn-info'><strong>Theft Information</strong></td>
      </tr>
      <tr>
        <td>Theft Date:</td>
        <td><%= @bicycle.date %></td>
      </tr>
      <tr>
        <td>Location:</td>
        <td>
          <%= @bicycle.city %>,
          <%= @bicycle.region %>
          <%= @bicycle.postal_code %>
        </td>
      </tr>
      <tr>
        <td colspan='2' class='btn-info'><strong>Bicycle Information</strong></td>
      </tr>
      <tr>
        <td>Serial Number:</td>
        <td><strong><%= @bicycle.serial %></strong></td>
      </tr>
      <tr>
        <td>Year:</td>
        <td><%= @bicycle.year %></td>
      </tr>
      <tr>
        <td>Make:</td>
        <td><%= @bicycle.model %></td>
      </tr>
      <tr>
        <td>Model:</td>
        <td><%= @bicycle.brand %></td>
      </tr>
      <tr>
        <td>Color:</td>
        <td><%= @bicycle.color %></td>
      </tr>
      <tr>
        <td>Size:</td>
        <td>
          <%= @bicycle.size %>
          <%= @bicycle.size_type %>
        </td>
      </tr>
      <tr>
        <td colspan='2' class='btn-info'><strong>Contact Information</strong></td>
      </tr>
        <td>Name:</td>
        <td>
          <%= @bicycle.user.first_name_public ? @bicycle.user.first_name : '<private first>' %>
          <%= @bicycle.user.last_name_public ? @bicycle.user.last_name : '<private last>' %>
        </td>
      <tr>
        <td>Email:</td>
        <td><%= @bicycle.user.email_public ? @bicycle.user.email : '<private>' %></td>
      </tr>
    </table>
  </div>
</div>
