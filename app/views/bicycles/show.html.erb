<h1 class="lead title"> Stolen Bike Listing: </h1>
<%= @bicycle.user.email %>
<%= image_tag @bicycle.photo.url :medium %>
<%= @bicycle.date %>
<%= @bicycle.city %>
<%= @bicycle.region %>
<%= @bicycle.country %>
<%= @bicycle.description %>
<%= @bicycle.postal_code %>
<%= @bicycle.serial %>
<%= @bicycle.verified_ownership %>
<%= @bicycle.year %>
<%= @bicycle.brand %>
<%= @bicycle.model %>
<%= @bicycle.color %>
<%= @bicycle.size %><%= @bicycle.size_type %>
<% if user_signed_in? && current_user == @bicycle.user %>
  <div class='row'>
    <p id='edit-delete'>
      <%= link_to 'Edit', edit_bicycle_path(@bicycle) %> |
      <%= link_to 'Delete', bicycle_path(@bicycle), method: 'delete', data: { confirm: "Are you sure you want to delete this listing?" } %>
    </p>
  </div>
<% end %>

<div class="row">
  <div class='col-md-4'>
    <table class="table table-bordered">
      <tr>
        <td><%= image_tag @bicycle.photo.url :medium %></td>
      </tr>
      <tr>
        <td class='btn-info'>Description</td>
      </tr>
      <tr>
        <td><%= @bicycle.description %></td>
      </tr>
      <tr>
        <td align="center"><h3>Have you seen me? Email us now if you have any info on my whereabouts.<h3><a href="mailto:bhance@gmail.com" class="btn btn-success btn-lg"> FOUND IT!</button></td>
      </tr>
    </table>
  </div>

  <div class='col-md-8'>
    <table class="table table-bordered">
      <tr>
        <td colspan='2' class='btn-info'><strong>Theft Information</strong></td>
      </tr>
      <tr>
        <td>Theft Date:</td>
        <td><%= @bicycle.date %></td>
      </tr>
      <tr>
        <td>Location:</td>
        <td>
          <%= @bicycle.city %>,
          <%= @bicycle.region %>
          <%= @bicycle.postal_code %>
        </td>
      </tr>
      <tr>
        <td colspan='2' class='btn-info'><strong>Bicycle Information</strong></td>
      </tr>
      <tr>
        <td>Serial Number:</td>
        <td><strong><%= @bicycle.serial %></strong></td>
      </tr>
      <tr>
        <td>Year:</td>
        <td><%= @bicycle.year %></td>
      </tr>
      <tr>
        <td>Make:</td>
        <td><%= @bicycle.model %></td>
      </tr>
      <tr>
        <td>Model:</td>
        <td><%= @bicycle.brand %></td>
      </tr>
      <tr>
        <td>Color:</td>
        <td><%= @bicycle.color %></td>
      </tr>
      <tr>
        <td>Size:</td>
        <td>
          <%= @bicycle.size %>
          <%= @bicycle.size_type %>
        </td>
      </tr>
      <tr>
        <td colspan='2' class='btn-info'><strong>Contact Information</strong></td>
      </tr>
      <tr>
        <td>First Name:</td>
        <td>
          <% if @bicycle.user.first_name_public %>
            <%= @bicycle.user.first_name %>
          <% else %>
            <p class="text-muted">private</p>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>Last Name:</td>
        <td>
          <% if @bicycle.user.last_name_public %>
            <%= @bicycle.user.last_name %>
          <% else %>
            <p class="text-muted">private</p>
          <% end %>
        </td>
      <tr>
        <td>Email:</td>
        <td>
          <% if @bicycle.user.email_public %>
            <%= @bicycle.user.email %>
          <% else %>
            <p class="text-muted">Email not publicly available.</p>
            <p class="text-muted">Contact <a href="mailto:bhance@gmail.com">S.B.R. admin</a> with questions regarding this listing<p>
          <% end %>
        </td>
      </tr>
      <% if @bicycle.not_approved? %>
        <tr>
          <td colspan='2' class='btn-warning'><strong>Listing created at: <%= @bicycle.created_at %>, PENDING ADMIN APPROVAL.</strong></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
