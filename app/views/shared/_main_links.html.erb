
<div class="row">
    <section id="gridSystem">
      <div class="row-fluid show-grid">

        <div class="btn-group span4">
          <%= button_to "Register a Stolen Bike", new_bicycle_path, :class => "btn btn-default btn-lg btn-register", :method => :get  %>
        </div>
        <div class="btn-group span4">
          <%= button_to "Search for a Bike ", '#', :class => "btn btn-default btn-lg btn-search", :method => :get  %>
        </div>
        <div class="btn-group span4">
          <% if user_signed_in? %>
            <%= button_to "Log-out ", destroy_user_session_path, :class => "btn btn-default btn-lg btn-login", :method => :get  %>
          <% else %>
            <%= button_to "Log-in ", user_session_path, :class => "btn btn-default btn-lg btn-login", :method => :get  %>
          <% end %>
        </div>

    </div>
  </section>
</div>